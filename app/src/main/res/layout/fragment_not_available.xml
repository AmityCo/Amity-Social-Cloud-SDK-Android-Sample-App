<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_grey_100"
    tools:ignore="PrivateResource">

    <ImageView
        android:id="@+id/ic_coming_soon"
        android:layout_width="@dimen/material_layout_vertical_spacing_tool_bar"
        android:layout_height="@dimen/material_layout_vertical_spacing_tool_bar"
        android:tint="@color/colorPrimary"
        app:layout_constraintBottom_toTopOf="@id/tv_coming_soon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_info" />

    <TextView
        android:id="@+id/tv_coming_soon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/material_component_cards_supporting_text_top_padding"
        android:text="@string/temporarily_not_available"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/ic_coming_soon"
        app:layout_constraintStart_toStartOf="@id/ic_coming_soon"
        app:layout_constraintTop_toBottomOf="@id/ic_coming_soon"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>