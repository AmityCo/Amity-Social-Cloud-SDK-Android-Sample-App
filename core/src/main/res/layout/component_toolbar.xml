<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/appbar_main"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@android:color/white"
    tools:parentTag="com.google.android.material.appbar.AppBarLayout">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/image_title_main"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/material_layout_vertical_spacing_tool_bar"
            android:layout_gravity="center"
            android:contentDescription="@string/app_name"
            android:visibility="gone"
            app:srcCompat="@drawable/default_ring" />

        <TextView
            android:id="@+id/text_title_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:ellipsize="end"
            android:lineSpacingExtra="@dimen/material_layout_vertical_spacing_status_bar"
            android:maxLines="1"
            android:textColor="@color/material_light_white"
            android:textSize="@dimen/material_typography_title"
            tools:text="Title" />
    </androidx.appcompat.widget.Toolbar>


</merge>