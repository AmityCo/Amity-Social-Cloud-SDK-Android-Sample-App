            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.amity.sample.ascsdk.stream.RecordedStreamListActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden" />

