            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.amity.sample.ascsdk.comment.ReplyCommentListActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.amity.sample.ascsdk.comment.create.CreateCommentActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
