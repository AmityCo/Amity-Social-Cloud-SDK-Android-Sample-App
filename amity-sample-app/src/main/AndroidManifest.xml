        <activity
            android:name="com.amity.sample.ascsdk.post.reaction.PostReactionActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.amity.sample.ascsdk.post.create.CreateTextPostActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.amity.sample.ascsdk.post.create.CreateImagePostActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.amity.sample.ascsdk.post.create.CreateFilePostActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.amity.sample.ascsdk.post.SinglePostActivity"
            android:screenOrientation="portrait"
