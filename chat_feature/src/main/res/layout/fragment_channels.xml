<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_light_black"
    android:padding="@dimen/material_layout_vertical_spacing_between_content_areas">

    <com.ekoapp.sample.chatfeature.components.HeaderChannelsComponent
        android:id="@+id/header_channels"
        android:layout_width="match_parent"
        android:layout_height="@dimen/material_layout_app_bar_height"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_filters"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:padding="@dimen/md_listitem_control_margin"
        android:text="@string/temporarily_filters"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/material_typography_subheading"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header_channels"
        tools:ignore="PrivateResource" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_main_channels"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_filters" />

</androidx.constraintlayout.widget.ConstraintLayout>
