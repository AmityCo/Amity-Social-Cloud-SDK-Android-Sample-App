<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/md_listitem_control_margin"
    tools:background="@color/material_light_black"
    tools:ignore="PrivateResource">

    <com.github.siyamed.shapeimageview.CircularImageView
        android:id="@+id/avatar"
        android:layout_width="@dimen/avatar_medium"
        android:layout_height="@dimen/avatar_medium"
        android:src="@drawable/ic_avatar_oval"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_full_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/md_listitem_margin_left"
        android:layout_marginEnd="@dimen/md_listitem_margin_left"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingTop="@dimen/material_component_lists_padding_above_list"
        android:text="@string/temporarily_anonymous"
        android:textColor="@color/material_light_white"
        android:textSize="@dimen/material_component_grid_lists_header_footer_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/image_reaction"
        app:layout_constraintStart_toEndOf="@id/avatar"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_reaction"
        android:layout_width="@dimen/md_icon_size"
        android:layout_height="@dimen/md_icon_size"
        android:layout_marginEnd="@dimen/md_listitem_margin_left"
        android:padding="@dimen/material_component_dialogs_padding_around_buttons"
        android:src="@drawable/ic_emoji_smile"
        app:layout_constraintBottom_toBottomOf="@id/text_full_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/text_full_name" />

</androidx.constraintlayout.widget.ConstraintLayout>