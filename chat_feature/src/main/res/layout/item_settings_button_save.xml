<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/md_listitem_control_margin"
    android:orientation="vertical"
    tools:background="@drawable/default_gradient_background"
    tools:ignore="PrivateResource">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/material_component_bottom_sheet_edge_top_bottom_margins"
        android:background="@drawable/default_button"
        android:backgroundTint="@color/material_light_black"
        android:gravity="center"
        android:paddingStart="@dimen/material_component_button_text_left_and_right_padding"
        android:paddingEnd="@dimen/material_component_button_text_left_and_right_padding"
        android:text="@string/general_save"
        android:textColor="@color/material_light_white"
        android:textSize="@dimen/material_typography_button" />

</LinearLayout>