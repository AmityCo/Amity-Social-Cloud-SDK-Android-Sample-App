<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_light_white">

    <RelativeLayout
        android:id="@+id/message_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="8dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/message_send_button"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_alignParentRight="true"
            android:enabled="false"
            android:text="Send" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/message_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/message_send_button"
            android:maxLines="4" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/message_edittext"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/message_image_button"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="Image" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/message_file_button"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="File" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/message_custom_button"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="Custom" />

        </LinearLayout>

    </RelativeLayout>

    <com.ekoapp.sample.core.base.components.toolbar.UIKitAppbar
        android:id="@+id/appbar_message"
        style="@style/AppTheme.Appbar" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/message_list_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/message_input_layout"
        android:layout_below="@id/appbar_message"
        android:scrollbarStyle="outsideOverlay"
        android:scrollbars="vertical"
        app:layoutManager="LinearLayoutManager"
        app:stackFromEnd="true" />

</RelativeLayout>