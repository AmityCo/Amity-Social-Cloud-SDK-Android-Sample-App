<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/material_light_black"
    android:padding="8dp">

    <View
        android:id="@+id/view_shimmer_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@color/material_grey_900"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="PrivateResource" />

    <View
        android:id="@+id/view_shimmer_title"
        android:layout_width="wrap_content"
        android:layout_height="8dp"
        android:layout_marginStart="72dp"
        android:background="@color/material_grey_900"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/view_shimmer_image"
        app:layout_constraintTop_toTopOf="@id/view_shimmer_image"
        tools:ignore="PrivateResource" />

</androidx.constraintlayout.widget.ConstraintLayout>