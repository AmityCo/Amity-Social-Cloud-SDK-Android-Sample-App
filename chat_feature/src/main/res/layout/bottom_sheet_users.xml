<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/default_bottom_sheet"
    android:backgroundTint="@color/material_grey_900"
    android:orientation="vertical"
    app:behavior_hideable="true"
    app:behavior_peekHeight="@dimen/material_component_bottom_sheet_list_item_height"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
    tools:ignore="PrivateResource">

    <com.ekoapp.sample.core.base.components.toolbar.SearchAppbar
        android:id="@+id/appbar_search"
        style="@style/AppTheme.SearchAppbar"
        android:background="@drawable/default_bottom_sheet"
        android:backgroundTint="@color/material_grey_900"
        android:visibility="gone" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_users"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>