<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/material_light_black"
    android:paddingBottom="@dimen/material_component_bottom_sheet_edge_top_bottom_margins">

    <com.ekoapp.sample.chatfeature.components.AvatarChatRoomWithTotalComponent
        android:id="@+id/avatar_chat_room_with_total"
        android:layout_width="@dimen/avatar_medium"
        android:layout_height="@dimen/avatar_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_chat_room_type"
        android:layout_width="@dimen/md_icon_margin"
        android:layout_height="@dimen/md_icon_margin"
        android:layout_marginStart="@dimen/material_component_lists_icon_left_padding"
        android:layout_marginTop="@dimen/material_layout_vertical_spacing_between_content_areas"
        android:src="@drawable/ic_channel_public"
        android:tint="@color/colorPrimary"
        app:layout_constraintStart_toEndOf="@id/avatar_chat_room_with_total"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="PrivateResource" />

    <TextView
        android:id="@+id/text_chat_room_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/material_component_grid_lists_padding_big"
        android:maxLines="1"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/material_typography_subheading"
        app:layout_constraintBottom_toBottomOf="@id/image_chat_room_type"
        app:layout_constraintEnd_toStartOf="@id/image_more_horiz"
        app:layout_constraintStart_toEndOf="@id/image_chat_room_type"
        app:layout_constraintTop_toTopOf="@id/image_chat_room_type"
        tools:ignore="PrivateResource"
        tools:text="Name" />

    <TextView
        android:id="@+id/text_chat_room_member"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textColor="@color/material_grey_600"
        android:textSize="@dimen/material_typography_caption"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/text_chat_room_name"
        app:layout_constraintTop_toBottomOf="@id/text_chat_room_name"
        tools:ignore="PrivateResource"
        tools:text="Members" />

    <ImageView
        android:id="@+id/image_more_horiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/temporarily_more"
        android:paddingTop="@dimen/md_action_button_frame_padding_neutral"
        android:src="@drawable/ic_more_horiz"
        android:tint="@color/material_light_white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="PrivateResource" />

</androidx.constraintlayout.widget.ConstraintLayout>
