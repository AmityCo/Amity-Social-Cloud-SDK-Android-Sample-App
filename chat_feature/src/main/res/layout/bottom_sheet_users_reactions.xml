<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/default_bottom_sheet"
    android:backgroundTint="@color/material_grey_900"
    android:orientation="vertical"
    app:behavior_hideable="true"
    app:behavior_peekHeight="@dimen/material_component_bottom_sheet_list_item_height"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
    tools:ignore="PrivateResource">

    <TextView
        android:id="@+id/text_reactions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/material_component_text_fields_floating_label_padding_below_text_divider"
        android:text="@string/temporarily_reactions"
        android:textColor="@color/material_light_white"
        android:textSize="@dimen/material_typography_subheading" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_users_reactions"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>