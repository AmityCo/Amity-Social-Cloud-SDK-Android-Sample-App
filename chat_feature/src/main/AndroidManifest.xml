<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dist="http://schemas.android.com/apk/distribution"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.ekoapp.sample.chatfeature">

    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <dist:module
        dist:instant="false"
        dist:onDemand="true"
        dist:title="@string/title_chat_feature">
        <dist:delivery>
            <dist:on-demand />
        </dist:delivery>
        <dist:fusing dist:include="true" />
    </dist:module>

    <application>

        <activity
            android:name="com.ekoapp.sample.chatfeature.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Appbar"
            android:windowSoftInputMode="stateAlwaysHidden"
            tools:ignore="LockedOrientationActivity" />

        <activity
            android:name="com.ekoapp.sample.chatfeature.channellist.ChannelListActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Appbar"
            android:windowSoftInputMode="stateAlwaysHidden"
            tools:ignore="LockedOrientationActivity" />

        <activity
            android:name="com.ekoapp.sample.chatfeature.messagelist.ParentMessageListActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Appbar"
            android:windowSoftInputMode="stateHidden"
            tools:ignore="LockedOrientationActivity" />

        <activity
            android:name="com.ekoapp.sample.chatfeature.messagelist.ChildMessageListActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Appbar"
            android:windowSoftInputMode="stateHidden"
            tools:ignore="LockedOrientationActivity" />

        <activity
            android:name="com.ekoapp.sample.chatfeature.messagelist.ImageMessageSenderActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden"
            tools:ignore="LockedOrientationActivity" />

        <activity
            android:name="com.ekoapp.sample.chatfeature.messagelist.FileMessageSenderActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden"
            tools:ignore="LockedOrientationActivity" />

        <activity
            android:name="com.ekoapp.sample.chatfeature.messagelist.CustomMessageSenderActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden"
            tools:ignore="LockedOrientationActivity" />

        <activity
            android:name="com.ekoapp.sample.chatfeature.messagereactionlist.MessageReactionListActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden"
            tools:ignore="LockedOrientationActivity" />

        <activity
            android:name="com.ekoapp.sample.chatfeature.channellist.filter.ChannelQueryFilterActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden"
            tools:ignore="LockedOrientationActivity" />

        <activity
            android:name="com.ekoapp.sample.chatfeature.usermetadata.ChangeMetadataActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden"
            tools:ignore="LockedOrientationActivity" />

        <service
            android:name="com.ekoapp.sample.chatfeature.services.SimpleFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths"/>
        </provider>

    </application>

</manifest>

