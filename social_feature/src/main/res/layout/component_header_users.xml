<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_component_header_users"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:background="@color/material_light_black"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

    <TextView
        android:id="@+id/text_total_acquaintances"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/material_component_grid_lists_padding_big"
        android:paddingEnd="@dimen/material_component_grid_lists_padding_big"
        android:text="@string/temporarily_total_acquaintances"
        android:textColor="@color/material_light_white"
        android:textSize="@dimen/material_typography_title"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/image_search"
        app:layout_constraintEnd_toStartOf="@id/image_search"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_friends"
        app:layout_constraintTop_toTopOf="@id/image_search"
        tools:ignore="PrivateResource"
        tools:visibility="visible" />


    <ImageView
        android:id="@+id/image_search"
        android:layout_width="@dimen/md_icon_size"
        android:layout_height="@dimen/md_icon_size"
        android:background="@drawable/default_oval"
        android:padding="@dimen/material_component_dialogs_padding_around_buttons"
        android:src="@drawable/ic_search"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="PrivateResource"
        tools:visibility="visible" />

</merge>