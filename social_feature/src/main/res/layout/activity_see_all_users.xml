<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_light_black"
    android:orientation="vertical"
    tools:ignore="PrivateResource">

    <com.ekoapp.sample.core.base.components.toolbar.UIKitAppbar
        android:id="@+id/appbar_see_all_users"
        style="@style/AppTheme.Appbar"
        android:background="@color/material_light_black" />

    <View
        android:id="@+id/view_grid_content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/material_component_grid_lists_padding_small"
        android:background="@color/material_light_white" />

    <com.ekoapp.sample.socialfeature.components.HeaderUsersComponent
        android:id="@+id/header_users"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/material_component_bottom_sheet_edge_top_bottom_margins"
        android:padding="@dimen/material_component_lists_padding_above_list" />

    <com.cooltechworks.views.shimmer.ShimmerRecyclerView
        android:id="@+id/recycler_users"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/material_component_lists_padding_above_list"
        app:shimmer_demo_angle="20"
        app:shimmer_demo_child_count="100"
        app:shimmer_demo_grid_child_count="1"
        app:shimmer_demo_layout="@layout/default_shimmer_contacts"
        app:shimmer_demo_layout_manager_type="grid"
        app:shimmer_demo_shimmer_color="@color/demo_light_transparent" />

</LinearLayout>