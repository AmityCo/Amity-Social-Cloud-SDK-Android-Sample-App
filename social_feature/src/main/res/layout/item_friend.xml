<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/md_listitem_control_margin"
    android:paddingLeft="@dimen/material_component_dialogs_padding_around_content_area"
    android:paddingRight="@dimen/material_component_dialogs_padding_around_content_area"
    tools:background="@color/material_light_black"
    tools:ignore="PrivateResource">

    <ImageView
        android:id="@+id/image_avatar"
        android:layout_width="@dimen/material_component_text_fields_floating_label_height"
        android:layout_height="@dimen/material_component_text_fields_floating_label_height"
        android:background="@color/material_light_white"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_full_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:maxLines="2"
        android:paddingTop="@dimen/material_component_lists_padding_above_list"
        android:text="@string/temporarily_full_name"
        android:textColor="@color/material_light_white"
        android:textSize="@dimen/material_component_grid_lists_header_footer_text_size"
        app:layout_constraintEnd_toEndOf="@id/image_avatar"
        app:layout_constraintStart_toStartOf="@id/image_avatar"
        app:layout_constraintTop_toBottomOf="@id/image_avatar" />

</androidx.constraintlayout.widget.ConstraintLayout>