<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/md_listitem_control_margin"
    android:background="@color/material_light_black"
    android:paddingLeft="@dimen/material_component_dialogs_padding_around_content_area"
    android:paddingTop="@dimen/material_component_dialogs_padding_around_content_area"
    android:paddingRight="@dimen/material_component_dialogs_padding_around_content_area"
    tools:ignore="PrivateResource"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

    <com.ekoapp.sample.socialfeature.components.HeaderFeedsComponent
        android:id="@+id/header_feeds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/material_component_dialogs_padding_around_buttons"
        android:paddingEnd="@dimen/material_component_dialogs_padding_around_buttons"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.ekoapp.sample.socialfeature.components.BodyFeedsComponent
        android:id="@+id/body_feeds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/material_component_cards_supporting_text_top_padding"
        android:paddingStart="@dimen/material_component_dialogs_padding_around_buttons"
        android:paddingEnd="@dimen/material_component_dialogs_padding_around_buttons"
        android:paddingBottom="@dimen/material_component_cards_supporting_text_top_padding"
        app:layout_constraintEnd_toEndOf="@id/header_feeds"
        app:layout_constraintStart_toStartOf="@id/header_feeds"
        app:layout_constraintTop_toBottomOf="@id/header_feeds" />

    <com.ekoapp.sample.socialfeature.components.ReactionsSummaryFeedsComponent
        android:id="@+id/reactions_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/material_component_dialogs_padding_around_buttons"
        app:layout_constraintStart_toStartOf="@id/header_feeds"
        app:layout_constraintTop_toBottomOf="@id/body_feeds" />

    <View
        android:id="@+id/view_grid_content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/material_component_grid_lists_padding_small"
        android:background="@color/material_grey_600"
        app:layout_constraintEnd_toEndOf="@id/header_feeds"
        app:layout_constraintStart_toStartOf="@id/header_feeds"
        app:layout_constraintTop_toBottomOf="@id/reactions_summary" />

    <com.ekoapp.sample.socialfeature.components.FooterFeedsComponent
        android:id="@+id/footer_feeds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/material_component_dialogs_padding_around_buttons"
        app:layout_constraintEnd_toEndOf="@id/header_feeds"
        app:layout_constraintStart_toStartOf="@id/header_feeds"
        app:layout_constraintTop_toBottomOf="@id/view_grid_content" />

</merge>